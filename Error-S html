    <header>Error S</header>
    <h2>Діагностика помилок пральних машин</h2>

    <div style="height:50px;"></div>

    <main>
        <select id="brandSelect">
            <option value="">Оберіть бренд</option>
            <option value="LG">LG</option>
            <option value="SAMSUNG">Samsung</option>
            <option value="BOSCH">Bosch</option>
            <option value="WHIRLPOOL">Whirlpool</option>
            <option value="INDESIT">Indesit</option>
            <option value="ELECTROLUX">Electrolux</option>
            <option value="CANDY">Candy</option>
            <option value="ZANUSSI">Zanussi</option>
            <option value="SIEMENS">Siemens</option>
            <option value="ARISTON">Ariston</option>
        </select>
        <input type="text" id="errorCode" placeholder="Введіть код помилки (наприклад, OE)">
        <button id="searchBtn">Пошук помилки</button>
    </main>

    <!-- Модальне вікно -->
    <div class="modal" id="errorModal">
        <div class="modal-content">
            <span class="close-btn" id="closeModal">&times;</span>
            <div id="modalText"></div>
        </div>
    </div>

    <script>
        const errorsDB = {
            "LG": {
                "OE": "Не працює злив -- перевірте зливний фільтр і насос.",
                "UE": "Дисбаланс завантаження -- розподіліть білизну.",
                "DE": "Помилка закриття дверей -- перевірте замок люка."
            },
            "SAMSUNG": {
                "5E": "Не зливається вода -- забитий фільтр або насос.",
                "E2": "Помилка нагріву -- перевірте датчик температури.",
                "DE": "Помилка блокування люка."
            },
            "BOSCH": {
                "E17": "Проблема з подачею води -- перевірте кран і шланг.",
                "E18": "Заблокований злив -- перевірте фільтр і насос."
            },
            "WHIRLPOOL": {
                "F02": "Проблема з зливом -- перевірте насос і шланг.",
                "F05": "Помилка датчика температури."
            },
            "INDESIT": {
                "F05": "Забитий фільтр зливу або несправний насос.",
                "F08": "Проблема з нагрівачем або датчиком температури."
            },
            "ELECTROLUX": {
                "E10": "Немає подачі води -- перевірте кран.",
                "E20": "Проблема зі зливом -- перевірте насос."
            },
            "CANDY": {
                "E03": "Проблема з відкачуванням води.",
                "E07": "Несправність мотора барабана."
            },
            "ZANUSSI": {
                "E10": "Відсутня подача води.",
                "E20": "Несправність зливного насоса."
            },
            "SIEMENS": {
                "E17": "Проблема з подачею води.",
                "E18": "Проблема зі зливом води."
            },
            "ARISTON": {
                "F05": "Забитий фільтр або зливний насос.",
                "F08": "Проблема з нагрівальним елементом."
            }
        };

        document.getElementById("searchBtn").addEventListener("click", () => {
            const brand = document.getElementById("brandSelect").value.trim().toUpperCase();
            const code = document.getElementById("errorCode").value.trim().toUpperCase();
            const modal = document.getElementById("errorModal");
            const modalText = document.getElementById("modalText");

            if (!brand) {
                modalText.textContent = "Будь ласка, оберіть бренд.";
            } else if (!code) {
                modalText.textContent = "Будь ласка, введіть код помилки.";
            } else if (errorsDB[brand] && errorsDB[brand][code]) {
                modalText.innerHTML = `<strong>Код :</strong><br>`;
            } else {
                modalText.textContent = `Код  не знайдено для бренду .`;
            }

            modal.style.display = "flex";
        });

        document.getElementById("closeModal").addEventListener("click", () => {
            document.getElementById("errorModal").style.display = "none";
        });

        window.addEventListener("click", (e) => {
            if (e.target === document.getElementById("errorModal")) {
                document.getElementById("errorModal").style.display = "none";
            }
        });
    </script>

</body>
